@model DreamJob.Ui.Web.Mvc.Controllers.RegisterUserViewModel
<div class="row">
    <div class="col-md-5 col-md-offset-4">
        <form role="form" id="dj-register-form">
            @Html.AntiForgeryToken()
            <div class="row has-error" id="dj-register-users-error-container"></div>
            <div class="form-group">
                @Html.LabelFor(x => x.Login) @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password) @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.DisplayName) @Html.TextBoxFor(x => x.DisplayName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email) @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div style="line-height: 200px;">
        <div class="col-md-2 col-md-offset-4">
            <div id="dj-button-register-as-developer" class="btn btn-primary">Register as developer</div>
        </div>
        <div class="col-md-2">
            <div id="dj-button-register-as-recruiter" class="btn btn-default">Register as recruiter</div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $('#dj-button-register-as-developer').click(function () {
            $.ajax({
                url: '@Url.Action("RegisterDeveloper", "Register")',
                type: 'post',
                data: $('#dj-register-form').serialize()

            }).always(function (response) {
                apendErrors(response);
            });
        });

        var apendErrors = function (response) {
            $('#dj-register-users-error-container').html(response);
        };

        $('#dj-button-register-as-recruiter').click(function () {

            $.ajax({
                url: '@Url.Action("RegisterRecruiter", "Register")',
                type: 'post',
                data: $('#dj-register-form').serialize()
            }).always(function (response) {
                apendErrors(response);
            });
        });
    </script>
}