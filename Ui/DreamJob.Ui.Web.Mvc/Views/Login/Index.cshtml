@model DreamJob.Ui.Web.Mvc.Models.Dto.LoginDto


<div class="row">
    <form role="form" method="post" action="@Url.Action("Index", "Login")">
        @Html.AntiForgeryToken()
        <div>
            @Html.ValidationSummary()
        </div>
        <div class="row">
            @Html.LabelFor(x => x.Login)
            @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
        </div>
        <div class="row">
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        </div>
        <div class="row">
            <input type="submit" class="button right" value="login"/>
        </div>
    </form>
</div>