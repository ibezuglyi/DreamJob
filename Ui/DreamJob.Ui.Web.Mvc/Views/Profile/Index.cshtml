@model DreamJob.Ui.Web.Mvc.Controllers.UserProfileDto


<div class="row">
    <div class="medium-4 columns">
        <div class="row">
            @Html.LabelFor(m => m.DisplayName) @Html.DisplayFor(m => m.DisplayName)
        </div>
        <div class="row">
            @Html.LabelFor(m => m.Email) @Html.DisplayFor(m => m.Email)
        </div>
        <div class="row">
            @Html.LabelFor(m => m.Login) @Html.DisplayFor(m => m.Login)
        </div>
    </div>
    <div class="medium-4 columns">
        <div class="row">
            @Html.LabelFor(m => m.Registered) @Html.DisplayFor(m => m.Registered)
        </div>
        <div class="row">
            @Html.LabelFor(m => m.AccountType) @Html.DisplayFor(m => m.AccountType)
        </div>
    </div>
    <div class="medium-4 columns">
        <div class="row">
            <label for="oldPassword">Old password</label>
            <input type="password" name="oldPassword" />
        </div>
        <div class="row">
            <label for="newPassword">New password</label>
            <input type="password" name="newPassword" />
        </div>
        <div class="row">
            <label for="confirmPassword">Confirm password</label>
            <input type="password" name="confirmPassword" />
        </div>
    </div>
</div>

<div class='dj-profile-application' ng-app='djpa' ng-controller='ProfileController'>
    <div class="row">
        <button class="btn" ng-click='foo()' ng-init=init()>fetch</button>
        <div id='dj-offers-container' class="row">
            <div class="medium-3 columns">
                <div ng-repeat="offer in offers">
                    <div class='row' ng-click='details(offer.Id)'>
                        <span>{{offer.Add}}</span>
                        <span>{{offer.Subject}}</span>
                        <span>{{offer.From}}</span>
                    </div>
                </div>
            </div>
            <div class='medium-9 columns'>
                <div>{{details.From}}</div>
                <div>{{details.To}}</div>
                <div>{{details.Add}}</div>
                <div>{{details.Status</div>
                <div>{{details.Subject}}</div>
                <div>{{details.Description}}</div>
                <div ng-repeat='comment in details.Comments'>
                    <div class='row'>
                        <div>{{comment.Add}}</div>
                        <div>{{comment.Author}}</div>
                        <div>{{comment.Text}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
<script src="~/Scripts/angular.js"></script>

<script type='text/javascript'>
    angular
        .module('djpa', [])
        .constant('offersGet', '@Url.Action("MyOffers", "Offers")');
</script>
<script src="~/Scripts/Application/Controllers/ProfileController.js"></script>
}

