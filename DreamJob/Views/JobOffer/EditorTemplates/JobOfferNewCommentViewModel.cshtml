@model DreamJob.ViewModels.JobOfferNewCommentViewModel

@using (Html.BeginForm("Add", "Comment", FormMethod.Post))
{
    <input type="hidden" name="JobOfferId" value="@Model.JobOfferId" />
    foreach (var s in Model.Statuses)
    {
        <div class="radio-inline">
            <label>
                <input type="radio" name="Status" value="@s.ToString()" />
                <span>@s.ToString()</span>
            </label>
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(m => m.Text)
        <textarea name="Text" rows="3" cols="20" class="form-control" value="@Model.Text"></textarea>

    </div>
    <button type="submit" class="btn btn-default pull-right">add comment</button>
}