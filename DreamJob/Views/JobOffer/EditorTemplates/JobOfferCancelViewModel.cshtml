@model DreamJob.ViewModels.JobOfferCancelViewModel

<div class="col-md-12">
    @using (Html.BeginForm("Cancel", "JobOffer", FormMethod.Post))
    {
        <div class="has-error text-danger">
            @Html.ValidationSummary(false, string.Empty, new { @class = "nocss-validation-errors" })
        </div>
        @Html.HiddenFor(m => m.JobOfferId)
        <div class="form-group">
            @Html.LabelFor(m => m.Text)
            @Html.TextAreaFor(m => m.Text, new { @class = "form-control" })
        </div>
    <button type="submit" role="button" class="btn btn-primary nocss-button-job-offer-status-change">Submit</button>
        @Html.ActionLink("Cancel", "Details", "JobOffer", new { id = Model.JobOfferId }, new { @class = "btn btn-default" })

    }
</div>
