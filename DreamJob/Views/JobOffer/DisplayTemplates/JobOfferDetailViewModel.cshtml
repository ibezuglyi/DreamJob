@model DreamJob.ViewModels.JobOfferDetailViewModel
<h1>
    @Html.DisplayFor(m => m.Position),
    @Html.DisplayFor(m => m.Salary) PLN
    <small>@Html.ActionLink(Model.DeveloperDisplayName, "Public", "Profile", new { id = Model.DeveloperId }, null)</small>
</h1>
<ul class="flow">
    @Html.DisplayFor(m => m.JobOfferStatusChangeViewModels)
</ul>

<div>
    <label>@Resources.Translations.RecruitingToText</label>
    @Html.DisplayFor(m => m.CompanyName)
</div>

<p class="multiline">
    @Html.LabelFor(m => m.JobOfferText)
    @Html.DisplayFor(m => m.JobOfferText)
</p>

<div>
    @Html.LabelFor(m => m.Requirements)
    @Html.DisplayFor(m => m.Requirements)
</div>

<div>
    <div class="nocss-container-job-offer-comments">
        <section class="comment-list">
            @Html.DisplayFor(m => m.JobOfferComments)
        </section>
    </div>
</div>

