@model DreamJob.ViewModels.JobOfferRejectViewModel

<h2>Rejecting</h2>

<h3>
    @Model.Position at @Model.CompanyName, @Model.Salary PLN
</h3>
        @using (Html.BeginForm("Reject", "JobOffer", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.JobOfferRejectDto.JobOfferId)
            <div class="form-group">
                @Html.LabelFor(m => m.JobOfferRejectDto.Text)
                @Html.TextAreaFor(m => m.JobOfferRejectDto.Text, new { @class = "form-control" })
            </div>
            
            <div class="pull-right">
                <button type="submit" role="button" class="btn btn-primary nocss-button-job-offer-status-change">Submit</button>
                @Html.ActionLink(Resources.Translations.JobOffer_Cancel, "Details", "JobOffer", new { id = Model.JobOfferRejectDto.JobOfferId }, new { @class = "btn btn-default" })    
            </div>
            

        }
