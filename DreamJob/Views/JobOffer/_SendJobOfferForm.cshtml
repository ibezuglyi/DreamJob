@model DreamJob.ViewModels.JobOfferSendViewModel

@Html.Partial("_ValidationSummary")
<form action="@Url.Action("Send", "JobOffer")" method="post" class="nocss-form-job-offer">
    @Html.HiddenFor(m => m.DeveloperId)

    <div class="form-group">
        @Html.LabelFor(m => m.Position)
        @Html.TextBoxFor(m => m.Position, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CompanyName)
        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.JobOfferText)
        @Html.TextAreaFor(m => m.JobOfferText, new { @class = "form-control", @rows = 5 })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Salary)
        @*<input type="number" value=99 name="Salary" />*@
        @Html.TextBoxFor(m => m.Salary, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Requirements)
        @Html.TextAreaFor(m => m.Requirements, new { @class = "form-control", @rows = 5 })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.OfferMatchesProfile)
            OfferMatchesProfile
        </label>
    </div>


    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.ProfileWasReadBeforeSending)
            ProfileWasReadBeforeSending
        </label>
    </div>
    <button type="submit" class="btn btn-primary nocss-button-job-offer-submit">send</button>
</form>
