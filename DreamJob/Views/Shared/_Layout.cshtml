<!DOCTYPE html>

<html>
<head>
    <title>Dream Job</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            @Html.ActionLink("DreamJob", "Index", "Home", null, new { @class = "navbar-brand" })
            <ul class="nav navbar-nav">
                <li>
                    @Html.ActionLink(Resources.Translations.Layout_Search, "Index", "Search")
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        @Html.Action("NewMessages", "Menu")
                    </li>
                }
                <li>
                    @Html.ActionLink(Resources.Translations.Layout_About, "Index", "About")
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">language <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("english", "ChangeLanguage", "Language", new { newlanguage = "en-US", returnUrl = this.Request.Url.LocalPath }, null)</li>
                        <li>@Html.ActionLink("polski", "ChangeLanguage", "Language", new { newlanguage = "pl-PL", returnUrl = this.Request.Url.LocalPath }, null)</li>
                    </ul>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink(Resources.Translations.Layout_Me, "Me", "Profile")</li>
                    <li>@Html.ActionLink(Resources.Translations.Layout_Logout, "Logout", "Profile")</li>
                }
                else
                {
                    <li>@Html.ActionLink(Resources.Translations.Layout_Register, "Register", "Profile")</li>
                    <li>@Html.ActionLink(Resources.Translations.Layout_Login, "Login", "Profile")</li>
                }
            </ul>
        </div>
    </nav>
    <div class="main">
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>
