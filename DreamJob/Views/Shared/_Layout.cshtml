<!DOCTYPE html>

<html>
<head>
    <title>Dream Job</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container">
                @Html.ActionLink("DreamJob", "Index", "Home", null, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Search", "Index", "Search")
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            @Html.Action("NewMessages", "Menu")
                        </li>
                    }
                    <li>
                        @Html.ActionLink("About", "Index", "About")
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Me", "Me", "Profile")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Profile")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Register", "Register", "Profile")</li>
                        <li>@Html.ActionLink("Login", "Login", "Profile")</li>
                    }
                </ul>
            </div>
        </nav>
            <div class="main">
                @RenderBody()
            </div>
            @RenderSection("scripts", false)
    </body>
</html>
