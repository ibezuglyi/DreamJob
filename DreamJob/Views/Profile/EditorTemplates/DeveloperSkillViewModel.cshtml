@model DreamJob.ViewModels.DeveloperSkillViewModel

<div class="input-group nocss-skill-row">
    @Html.HiddenFor(m => m.SkillId)
    @if (@Model.SkillId != 0)
    {
        @Html.HiddenFor(m => m.Name)
        <span class="input-group-addon">@Model.Name</span>

        for (int i = 1; i <= 10; i++)
        {
            @Html.RadioButtonFor(m => m.Level, i);
        }


        <span class="input-group-btn">
            <button value="@Model.SkillId"
                    name="Action"
                    class="btn btn-danger nocss-remove-skill"
                    data-skill-id="@Model.SkillId"
                    type="submit"
                    role="button">
                remove
            </button>
        </span>
    }
    else
    {
        <label>New skill name</label>
        @Html.EditorFor(m => m.Name, new { @class = "form-control" })<br />
        <label>New skill level</label>
        for (int i = 1; i <= 10; i++)
        {
            @Html.RadioButtonFor(m => m.Level, i);
        }
    }
</div>