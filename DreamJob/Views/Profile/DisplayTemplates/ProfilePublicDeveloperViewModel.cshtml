@model DreamJob.ViewModels.ProfilePublicDeveloperViewModel
<h1>
    <span class="pull-left multiline">@Model.LookingFor</span>
    <span class="pull-right">@Html.DisplayFor(m => m.Salary) PLN</span>
    <span class="clearfix"></span>
</h1>

<div>
    <div>
        <p class="multiline">@Model.AboutMe</p>
    </div>
    <div>
        @Html.LabelFor(m => m.CurrentWorkingLocation)
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        @Html.DisplayFor(m => m.CurrentWorkingLocation)
    </div>
    @{
        var cityIcon = Model.WillingToRelocateToDifferentCity ? "glyphicon-ok" : "glyphicon-remove";
        var countryIcon = Model.WillingToRelocateToDifferentCountry ? "glyphicon-ok" : "glyphicon-remove";
    }
    <div>
        @Html.LabelFor(m => m.WillingToRelocateToDifferentCity)
        <span class="glyphicon @cityIcon" aria-hidden="true"></span>
    </div>
    <div>
        @Html.LabelFor(m => m.WillingToRelocateToDifferentCountry)
        <span class="glyphicon @countryIcon" aria-hidden="true"></span>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ExperienceInYears)
        @Html.DisplayFor(m => m.ExperienceInYears)
    </div>

    <div>

        @Html.DisplayFor(m => m.SkillsViewModels)
    </div>
</div>
