@using DreamJob.ViewModels
@model ProfileRegisterViewModel

<div class="container col-md-6 col-md-offset-3">
    @using (Html.BeginForm("RegisterRecruiter", "Profile", FormMethod.Post))
    {
        @Html.Hidden("Role", ApplicationUserRole.Recruiter)
        @Html.Partial("_ValidationSummary")
        @Html.Partial("_RegisterProfile", Model)
        <button class="btn btn-primary pull-right" role="button">@Resources.Translations.Profile_Register</button>
    }
</div>
