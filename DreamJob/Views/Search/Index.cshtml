<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <div class="row">
            @using (Html.BeginForm("Skill", "Search", FormMethod.Get))
            {
                <span class="label label-info">Search by skill</span>
                <div class="form-group">
                    <label for="skill">Enter skill name below. You can use ',' or ';' or space to enter multiple skills</label><br />
                    <input type="text" id="skill" name="skill" class="form-control">
                </div>
                <input type="submit" class="button button-default pull-right" value="search" />
            }
        </div><hr />
        <div class="row">
            @using (Html.BeginForm("Salary", "Search", FormMethod.Get))
            {
                <span class="label label-info">Search by salary</span>
                <div class="form-group">
                    <label for="Minimum">Minimum salary:</label>
                    <input type="number" id="Minimum" name="Minimum" class="form-control" />
                    <label for="Maximum">Maximum salary:</label>
                    <input type="number" id="Maximum" name="Maximum" class="form-control" />
                </div>
                <input type="submit" class="button button-default pull-right" value="search" />
            }
        </div>
    </div>
</div>
